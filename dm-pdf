#!/usr/bin/env bash

book_dir="$HOME/Documents/Books"

prompt="dmenu -i -m $DISPLAY -l 25"
# prompt="fzf"

sel_category=$(ls "$book_dir" | $prompt)

[ "$sel_category" ] && \
    sel_book=$(find "$book_dir/$sel_category" -type f -exec basename {} \; | $prompt) || exit 0

[ "${sel_book##*.}" == "pdf" ] && zathura "$book_dir/$sel_category/$sel_book" &
[ "${sel_book##*.}" == "epub" ] && mupdf "$book_dir/$sel_category/$sel_book" &
